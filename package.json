{
  "name": "scam-notifier-bot",
  "version": "1.0.1",
  "description": "This bot tracks and alerts about scam activity by monitoring notification EOAs. It updates the list of notification EOAs by analyzing other notifications.",
  "repository": "https://github.com/Kayaba-Attribution/SCAM-NOTIFIER-FORTA-BOT",
  "chainIds": [
    1,
    56,
    137
  ],
  "chainSettings": {
    "default": {
      "shards": 10,
      "target": 2
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run start:dev",
    "start:dev": "nodemon --watch src --watch forta.config.json -e js,ts,json  --exec \"npm run build && forta-agent run\"",
    "start:prod": "forta-agent run --prod",
    "tx": "npm run build && forta-agent run --tx",
    "block": "npm run build && forta-agent run --block",
    "range": "npm run build && forta-agent run --range",
    "alert": "npm run build && forta-agent run --alert",
    "sequence": "npm run build && forta-agent run --sequence",
    "file": "npm run build && forta-agent run --file",
    "publish": "forta-agent publish",
    "info": "forta-agent info",
    "logs": "forta-agent logs",
    "push": "forta-agent push",
    "disable": "forta-agent disable",
    "enable": "forta-agent enable",
    "keyfile": "forta-agent keyfile",
    "test": "jest --detectOpenHandles --testNamePattern='Bot Alerts Test'",
    "testDB": "jest --detectOpenHandles"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.3",
    "forta-agent": "^0.1.32",
    "neo4j-driver": "^5.7.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/nodemon": "^1.19.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.8",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  }
}
